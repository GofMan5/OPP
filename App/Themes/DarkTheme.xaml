<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Основные цвета темной темы -->
    <Color x:Key="BackgroundColor">#1e1e2e</Color>
    <Color x:Key="BackgroundSecondaryColor">#181825</Color>
    <Color x:Key="ForegroundColor">#cdd6f4</Color>
    <Color x:Key="ForegroundSecondaryColor">#7f849c</Color>
    <Color x:Key="AccentColor">#7dcfff</Color>
    <Color x:Key="AccentSecondaryColor">#cba6f7</Color>
    <Color x:Key="BorderColor">#45475a</Color>
    <Color x:Key="HighlightColor">#313244</Color>
    <Color x:Key="PressedColor">#45475a</Color>
    <Color x:Key="SuccessColor">#7bed9f</Color>
    <Color x:Key="WarningColor">#f9e2af</Color>
    <Color x:Key="DangerColor">#f38ba8</Color>
    <Color x:Key="WindowTitleBarColor">#11111b</Color>
    
    <!-- Кисти -->
    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}" />
    <SolidColorBrush x:Key="BackgroundSecondaryBrush" Color="{StaticResource BackgroundSecondaryColor}" />
    <SolidColorBrush x:Key="ForegroundBrush" Color="{StaticResource ForegroundColor}" />
    <SolidColorBrush x:Key="ForegroundSecondaryBrush" Color="{StaticResource ForegroundSecondaryColor}" />
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}" />
    <SolidColorBrush x:Key="AccentSecondaryBrush" Color="{StaticResource AccentSecondaryColor}" />
    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}" />
    <SolidColorBrush x:Key="HighlightBrush" Color="{StaticResource HighlightColor}" />
    <SolidColorBrush x:Key="PressedBrush" Color="{StaticResource PressedColor}" />
    <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource SuccessColor}" />
    <SolidColorBrush x:Key="WarningBrush" Color="{StaticResource WarningColor}" />
    <SolidColorBrush x:Key="DangerBrush" Color="{StaticResource DangerColor}" />
    <SolidColorBrush x:Key="WindowTitleBarBrush" Color="{StaticResource WindowTitleBarColor}" />
    
    <!-- Градиенты -->
    <LinearGradientBrush x:Key="WindowBackgroundBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="{StaticResource BackgroundColor}" Offset="0"/>
        <GradientStop Color="{StaticResource BackgroundSecondaryColor}" Offset="1"/>
    </LinearGradientBrush>
    
    <!-- Описание темы для использования в UI -->
    <System:String x:Key="ThemeDescription" xmlns:System="clr-namespace:System;assembly=mscorlib">Темный фон с яркими акцентами</System:String>
    
    <!-- Ресурсы для диалога администратора -->
    <SolidColorBrush x:Key="DialogBackgroundBrush" Color="#11111b" />
    <SolidColorBrush x:Key="HeaderBackgroundBrush" Color="#1a1b26" />
    <SolidColorBrush x:Key="ContentBackgroundBrush" Color="#16161e" />
    <SolidColorBrush x:Key="FooterBackgroundBrush" Color="#1a1b26" />
    <SolidColorBrush x:Key="LoadingStrokeBrush" Color="#7dcfff" />
    <SolidColorBrush x:Key="PrimaryButtonBrush" Color="#7dcfff" />
    <SolidColorBrush x:Key="PrimaryButtonTextBrush" Color="#16161e" />
    <SolidColorBrush x:Key="PrimaryButtonBorderBrush" Color="#7dcfff" />
    <SolidColorBrush x:Key="SecondaryButtonBrush" Color="#313244" />
    <SolidColorBrush x:Key="SecondaryButtonTextBrush" Color="#cdd6f4" />
    <SolidColorBrush x:Key="SecondaryButtonBorderBrush" Color="#45475a" />
    
    <!-- Стиль для кнопок диалога -->
    <Style x:Key="DialogButtonStyle" TargetType="Button">
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="ButtonBorder" 
                            Background="{TemplateBinding Background}" 
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="1"
                            CornerRadius="6">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="8" 
                                             ShadowDepth="2" 
                                             Opacity="0.2" 
                                             Direction="315" 
                                             Color="#000000"/>
                        </Border.Effect>
                        <Border.RenderTransform>
                            <TranslateTransform x:Name="TranslateTransform" X="0" Y="0" />
                        </Border.RenderTransform>
                        <ContentPresenter x:Name="ContentPresenter" 
                                         HorizontalAlignment="Center" 
                                         VerticalAlignment="Center" />
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="ButtonBorder" Property="RenderTransform">
                                <Setter.Value>
                                    <TranslateTransform X="0" Y="-1.5"/>
                                </Setter.Value>
                            </Setter>
                            <Setter TargetName="ButtonBorder" Property="Effect">
                                <Setter.Value>
                                    <DropShadowEffect BlurRadius="12" 
                                                     ShadowDepth="3" 
                                                     Opacity="0.3" 
                                                     Direction="315" 
                                                     Color="#000000"/>
                                </Setter.Value>
                            </Setter>
                            <Setter TargetName="ContentPresenter" Property="RenderTransform">
                                <Setter.Value>
                                    <ScaleTransform ScaleX="1.02" ScaleY="1.02" />
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="ButtonBorder" Property="RenderTransform">
                                <Setter.Value>
                                    <TranslateTransform X="0" Y="0"/>
                                </Setter.Value>
                            </Setter>
                            <Setter TargetName="ButtonBorder" Property="Effect">
                                <Setter.Value>
                                    <DropShadowEffect BlurRadius="6" 
                                                     ShadowDepth="1" 
                                                     Opacity="0.2" 
                                                     Direction="315" 
                                                     Color="#000000"/>
                                </Setter.Value>
                            </Setter>
                            <Setter TargetName="ContentPresenter" Property="RenderTransform">
                                <Setter.Value>
                                    <ScaleTransform ScaleX="0.98" ScaleY="0.98" />
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
    <!-- Стиль для кнопки закрытия в заголовке -->
    <Style x:Key="CloseButtonStyle" TargetType="Button">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="Transparent">
                        <ContentPresenter HorizontalAlignment="Center" 
                                         VerticalAlignment="Center" />
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Opacity" Value="0.7"/>
            </Trigger>
        </Style.Triggers>
    </Style>
    
</ResourceDictionary> 