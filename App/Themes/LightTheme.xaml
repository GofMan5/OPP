<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Основные цвета светлой темы -->
    <Color x:Key="BackgroundColor">#f8f8f2</Color>
    <Color x:Key="BackgroundSecondaryColor">#eff1f5</Color>
    <Color x:Key="ForegroundColor">#303446</Color>
    <Color x:Key="ForegroundSecondaryColor">#5c5f77</Color>
    <Color x:Key="AccentColor">#1e66f5</Color>
    <Color x:Key="AccentSecondaryColor">#8839ef</Color>
    <Color x:Key="BorderColor">#bcc0cc</Color>
    <Color x:Key="HighlightColor">#e6e9ef</Color>
    <Color x:Key="PressedColor">#dce0e8</Color>
    <Color x:Key="SuccessColor">#40a02b</Color>
    <Color x:Key="WarningColor">#df8e1d</Color>
    <Color x:Key="DangerColor">#d20f39</Color>
    <Color x:Key="WindowTitleBarColor">#e6e9ef</Color>
    
    <!-- Кисти -->
    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}" />
    <SolidColorBrush x:Key="BackgroundSecondaryBrush" Color="{StaticResource BackgroundSecondaryColor}" />
    <SolidColorBrush x:Key="ForegroundBrush" Color="{StaticResource ForegroundColor}" />
    <SolidColorBrush x:Key="ForegroundSecondaryBrush" Color="{StaticResource ForegroundSecondaryColor}" />
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}" />
    <SolidColorBrush x:Key="AccentSecondaryBrush" Color="{StaticResource AccentSecondaryColor}" />
    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}" />
    <SolidColorBrush x:Key="HighlightBrush" Color="{StaticResource HighlightColor}" />
    <SolidColorBrush x:Key="PressedBrush" Color="{StaticResource PressedColor}" />
    <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource SuccessColor}" />
    <SolidColorBrush x:Key="WarningBrush" Color="{StaticResource WarningColor}" />
    <SolidColorBrush x:Key="DangerBrush" Color="{StaticResource DangerColor}" />
    <SolidColorBrush x:Key="WindowTitleBarBrush" Color="{StaticResource WindowTitleBarColor}" />
    
    <!-- Градиенты -->
    <LinearGradientBrush x:Key="WindowBackgroundBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="{StaticResource BackgroundColor}" Offset="0"/>
        <GradientStop Color="{StaticResource BackgroundSecondaryColor}" Offset="1"/>
    </LinearGradientBrush>
    
    <!-- Описание темы для использования в UI -->
    <System:String x:Key="ThemeDescription" xmlns:System="clr-namespace:System;assembly=mscorlib">Светлый фон с яркими акцентами</System:String>
    
    <!-- Ресурсы для диалога администратора -->
    <SolidColorBrush x:Key="DialogBackgroundBrush" Color="#f8f8f2" />
    <SolidColorBrush x:Key="HeaderBackgroundBrush" Color="#303446" />
    <SolidColorBrush x:Key="ContentBackgroundBrush" Color="#f8f9fa" />
    <SolidColorBrush x:Key="FooterBackgroundBrush" Color="#e6e9ef" />
    <SolidColorBrush x:Key="LoadingStrokeBrush" Color="#1e66f5" />
    <SolidColorBrush x:Key="PrimaryButtonBrush" Color="#1e66f5" />
    <SolidColorBrush x:Key="PrimaryButtonTextBrush" Color="#ffffff" />
    <SolidColorBrush x:Key="PrimaryButtonBorderBrush" Color="#1e66f5" />
    <SolidColorBrush x:Key="SecondaryButtonBrush" Color="#f1f3f5" />
    <SolidColorBrush x:Key="SecondaryButtonTextBrush" Color="#303446" />
    <SolidColorBrush x:Key="SecondaryButtonBorderBrush" Color="#bcc0cc" />
    
    <!-- Стиль для кнопок диалога -->
    <Style x:Key="DialogButtonStyle" TargetType="Button">
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="ButtonBorder" 
                            Background="{TemplateBinding Background}" 
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="1"
                            CornerRadius="6">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="8" 
                                             ShadowDepth="2" 
                                             Opacity="0.15" 
                                             Direction="315" 
                                             Color="#000000"/>
                        </Border.Effect>
                        <Border.RenderTransform>
                            <TranslateTransform x:Name="TranslateTransform" X="0" Y="0" />
                        </Border.RenderTransform>
                        <ContentPresenter x:Name="ContentPresenter" 
                                         HorizontalAlignment="Center" 
                                         VerticalAlignment="Center" />
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="ButtonBorder" Property="RenderTransform">
                                <Setter.Value>
                                    <TranslateTransform X="0" Y="-1.5"/>
                                </Setter.Value>
                            </Setter>
                            <Setter TargetName="ButtonBorder" Property="Effect">
                                <Setter.Value>
                                    <DropShadowEffect BlurRadius="12" 
                                                     ShadowDepth="3" 
                                                     Opacity="0.25" 
                                                     Direction="315" 
                                                     Color="#000000"/>
                                </Setter.Value>
                            </Setter>
                            <Setter TargetName="ContentPresenter" Property="RenderTransform">
                                <Setter.Value>
                                    <ScaleTransform ScaleX="1.02" ScaleY="1.02" />
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="ButtonBorder" Property="RenderTransform">
                                <Setter.Value>
                                    <TranslateTransform X="0" Y="0"/>
                                </Setter.Value>
                            </Setter>
                            <Setter TargetName="ButtonBorder" Property="Effect">
                                <Setter.Value>
                                    <DropShadowEffect BlurRadius="6" 
                                                     ShadowDepth="1" 
                                                     Opacity="0.15" 
                                                     Direction="315" 
                                                     Color="#000000"/>
                                </Setter.Value>
                            </Setter>
                            <Setter TargetName="ContentPresenter" Property="RenderTransform">
                                <Setter.Value>
                                    <ScaleTransform ScaleX="0.98" ScaleY="0.98" />
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
    <!-- Стиль для кнопки закрытия в заголовке -->
    <Style x:Key="CloseButtonStyle" TargetType="Button">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="Transparent">
                        <ContentPresenter HorizontalAlignment="Center" 
                                         VerticalAlignment="Center" />
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Opacity" Value="0.7"/>
            </Trigger>
        </Style.Triggers>
    </Style>
    
</ResourceDictionary> 