<Window x:Class="App.Views.AdminRequiredDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:App.Views"
        mc:Ignorable="d"
        Title="Требуются права администратора" 
        Height="200" Width="450"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        BorderThickness="1"
        BorderBrush="{DynamicResource BorderBrush}"
        Background="{DynamicResource DialogBackgroundBrush}">

    <Window.Resources>
        <!-- Стиль для кнопки закрытия в заголовке -->
        <Style x:Key="HeaderCloseButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="30"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Opacity" Value="0.8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="ButtonBorder" 
                                Background="{TemplateBinding Background}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="4"
                                Padding="7">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ButtonBorder" Property="Background" Value="#f38ba8"/>
                                <Setter Property="Opacity" Value="1"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="ButtonBorder" Property="Background" Value="#f38ba880"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Кастомная шапка окна -->
        <Border Grid.Row="0" 
                Background="Transparent" 
                Height="30"
                MouseDown="TitleBar_MouseDown">
            <Grid>
                <TextBlock Text="Требуются права администратора"
                           Foreground="{DynamicResource ForegroundBrush}"
                           VerticalAlignment="Center"
                           Margin="10,0,0,0"/>
                
                <Button x:Name="CloseHeaderButton" 
                        HorizontalAlignment="Right" 
                        VerticalAlignment="Center"
                        Width="30" 
                        Height="30" 
                        Click="CloseButton_Click"
                        Margin="0,0,5,0"
                        Style="{StaticResource HeaderCloseButtonStyle}">
                    <Grid>
                        <Path Data="M0,0 L10,10" 
                              Stroke="{DynamicResource ForegroundBrush}" 
                              StrokeThickness="1.6" 
                              StrokeStartLineCap="Round" 
                              StrokeEndLineCap="Round"/>
                        <Path Data="M0,10 L10,0" 
                              Stroke="{DynamicResource ForegroundBrush}" 
                              StrokeThickness="1.6" 
                              StrokeStartLineCap="Round" 
                              StrokeEndLineCap="Round"/>
                    </Grid>
                </Button>
            </Grid>
        </Border>

        <!-- Основное содержимое -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Большие кнопки на весь размер -->
            <Button x:Name="ContinueButton" 
                    Grid.Row="0"
                    Content="Запустить с правами администратора" 
                    FontSize="14"
                    FontWeight="SemiBold"
                    Padding="15,12" 
                    Margin="0,0,0,10"
                    Background="{DynamicResource PrimaryButtonBrush}"
                    Foreground="{DynamicResource PrimaryButtonTextBrush}"
                    BorderBrush="{DynamicResource PrimaryButtonBorderBrush}"
                    Click="ContinueButton_Click"
                    Style="{DynamicResource DialogButtonStyle}"/>
            
            <Button x:Name="CloseButton" 
                    Grid.Row="1"
                    Content="Закрыть" 
                    FontSize="14"
                    FontWeight="SemiBold"
                    Padding="15,12"
                    Margin="0,10,0,0"
                    Background="{DynamicResource SecondaryButtonBrush}"
                    Foreground="{DynamicResource SecondaryButtonTextBrush}"
                    BorderBrush="{DynamicResource SecondaryButtonBorderBrush}"
                    Click="CloseButton_Click"
                    Style="{DynamicResource DialogButtonStyle}"/>
        </Grid>
    </Grid>
</Window> 