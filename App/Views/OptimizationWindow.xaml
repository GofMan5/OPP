<Window x:Class="App.Views.OptimizationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:App.Views"
        mc:Ignorable="d"
        Title="Оптимизация"
        Height="800" Width="1050"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">

    <Window.Resources>
        <!-- Стили для кнопок управления окном -->
        <Style x:Key="WindowControlButton" TargetType="Button">
            <Setter Property="Width" Value="30"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Opacity" Value="0.8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="ButtonBorder" 
                                Background="{TemplateBinding Background}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="4"
                                Padding="7">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ButtonBorder" Property="Background" Value="#313244"/>
                                <Setter Property="Opacity" Value="1"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="ButtonBorder" Property="Background" Value="#45475a"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="CloseButtonStyle" TargetType="Button" BasedOn="{StaticResource WindowControlButton}">
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#f38ba8"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#f38ba880"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <!-- Стиль для больших кнопок оптимизации -->
        <Style x:Key="OptimizationButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="360"/>
            <Setter Property="Height" Value="80"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="ButtonBorder" 
                                CornerRadius="16" 
                                Background="{TemplateBinding Background}"
                                Padding="20">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="12" 
                                                 Direction="315" 
                                                 Opacity="0.2" 
                                                 ShadowDepth="2" 
                                                 Color="Black"/>
                            </Border.Effect>
                            <Border.RenderTransform>
                                <TranslateTransform X="0" Y="0"/>
                            </Border.RenderTransform>
                            <Grid>
                                <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ButtonBorder" Property="RenderTransform">
                                    <Setter.Value>
                                        <TranslateTransform X="1.5" Y="-1.5"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="ButtonBorder" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect BlurRadius="16" 
                                                         Direction="315" 
                                                         Opacity="0.3" 
                                                         ShadowDepth="4" 
                                                         Color="Black"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="ButtonBorder" Property="Opacity" Value="0.95"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="ButtonBorder" Property="RenderTransform">
                                    <Setter.Value>
                                        <TranslateTransform X="0.5" Y="-0.5"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="ButtonBorder" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect BlurRadius="8" 
                                                         Direction="315" 
                                                         Opacity="0.2" 
                                                         ShadowDepth="1" 
                                                         Color="Black"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Градиенты для кнопок -->
        <LinearGradientBrush x:Key="AutoOptimizationGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#9C27B0" Offset="0"/>
            <GradientStop Color="#B039C7" Offset="1"/>
        </LinearGradientBrush>
        
        <LinearGradientBrush x:Key="ManualOptimizationGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#1A76D2" Offset="0"/>
            <GradientStop Color="#4597E0" Offset="1"/>
        </LinearGradientBrush>
        
        <!-- Стиль для заголовков блоков -->
        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#cdd6f4"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>
        
        <!-- Стиль для значений характеристик -->
        <Style x:Key="SpecValueStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#f8f8f2"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        
        <!-- Стиль для меток характеристик -->
        <Style x:Key="SpecLabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#bac2de"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
        </Style>
        
        <!-- Стиль для блоков с характеристиками -->
        <Style x:Key="SpecPanelStyle" TargetType="Border">
            <Setter Property="Background" Value="#181825"/>
            <Setter Property="BorderBrush" Value="#313244"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.2" Color="#000000"/>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Стиль для кнопки обновления данных -->
        <Style x:Key="RefreshButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="24"/>
            <Setter Property="Height" Value="24"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="5,0,0,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="ButtonBorder" 
                                Background="{TemplateBinding Background}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="4"
                                Padding="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ButtonBorder" Property="Background" Value="#313244"/>
                                <Setter Property="Opacity" Value="1"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="ButtonBorder" Property="Background" Value="#45475a"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Стиль для кнопки автоматической оптимизации -->
        <Style x:Key="AutoOptimizationButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="400"/>
            <Setter Property="Height" Value="90"/>
            <Setter Property="Margin" Value="0,0,0,20"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="ButtonBorder" 
                                CornerRadius="22" 
                                Background="{StaticResource AutoOptimizationGradient}"
                                Padding="20">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="12" 
                                                 Direction="315" 
                                                 Opacity="0.2" 
                                                 ShadowDepth="2" 
                                                 Color="Black"/>
                            </Border.Effect>
                            <Border.RenderTransform>
                                <TranslateTransform X="0" Y="0"/>
                            </Border.RenderTransform>
                            <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ButtonBorder" Property="RenderTransform">
                                    <Setter.Value>
                                        <TranslateTransform X="1.5" Y="-1.5"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="ButtonBorder" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect BlurRadius="16" 
                                                         Direction="315" 
                                                         Opacity="0.3" 
                                                         ShadowDepth="4" 
                                                         Color="Black"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="ButtonBorder" Property="Opacity" Value="0.95"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="ButtonBorder" Property="RenderTransform">
                                    <Setter.Value>
                                        <TranslateTransform X="0.5" Y="-0.5"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="ButtonBorder" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect BlurRadius="8" 
                                                         Direction="315" 
                                                         Opacity="0.2" 
                                                         ShadowDepth="1" 
                                                         Color="Black"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Стиль для кнопки мануальной оптимизации -->
        <Style x:Key="ManualOptimizationButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="400"/>
            <Setter Property="Height" Value="90"/>
            <Setter Property="Margin" Value="0,0,0,30"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="ButtonBorder" 
                                CornerRadius="22" 
                                Background="{StaticResource ManualOptimizationGradient}"
                                Padding="20">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="12" 
                                                 Direction="315" 
                                                 Opacity="0.2" 
                                                 ShadowDepth="2" 
                                                 Color="Black"/>
                            </Border.Effect>
                            <Border.RenderTransform>
                                <TranslateTransform X="0" Y="0"/>
                            </Border.RenderTransform>
                            <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ButtonBorder" Property="RenderTransform">
                                    <Setter.Value>
                                        <TranslateTransform X="1.5" Y="-1.5"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="ButtonBorder" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect BlurRadius="16" 
                                                         Direction="315" 
                                                         Opacity="0.3" 
                                                         ShadowDepth="4" 
                                                         Color="Black"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="ButtonBorder" Property="Opacity" Value="0.95"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="ButtonBorder" Property="RenderTransform">
                                    <Setter.Value>
                                        <TranslateTransform X="0.5" Y="-0.5"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="ButtonBorder" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect BlurRadius="8" 
                                                         Direction="315" 
                                                         Opacity="0.2" 
                                                         ShadowDepth="1" 
                                                         Color="Black"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Border CornerRadius="12" Padding="0">
        <Border.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#1e1e2e" Offset="0"/>
                <GradientStop Color="#181825" Offset="1"/>
            </LinearGradientBrush>
        </Border.Background>
        <Border.Effect>
            <DropShadowEffect BlurRadius="15" ShadowDepth="0" Opacity="0.5" Color="#121212"/>
        </Border.Effect>
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="32"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- Строка заголовка с кнопками управления окном -->
            <Border Grid.Row="0" Background="#11111b" MouseDown="TitleBar_MouseDown" CornerRadius="12,12,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="1" 
                              Text="Оптимизация системы" 
                              Foreground="#cdd6f4" 
                              FontSize="13" 
                              FontWeight="SemiBold" 
                              HorizontalAlignment="Center" 
                              VerticalAlignment="Center"/>
                    
                    <!-- Кнопки управления окном -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,8,0">
                        <!-- Кнопка возврата к главному меню -->
                        <Button x:Name="BackButton" 
                                Style="{StaticResource WindowControlButton}"
                                Click="BackButton_Click"
                                Margin="3,0,3,0"
                                ToolTip="Вернуться в главное меню">
                            <Grid>
                                <TextBlock Text="&#xE72B;" 
                                          FontFamily="Segoe MDL2 Assets" 
                                          Foreground="#cdd6f4"/>
                            </Grid>
                        </Button>
                        
                        <!-- Кнопка переключения полноэкранного режима -->
                        <Button x:Name="FullScreenButton" 
                                Style="{StaticResource WindowControlButton}"
                                Click="FullScreenButton_Click"
                                Margin="3,0,3,0"
                                ToolTip="Полноэкранный режим">
                            <Grid>
                                <TextBlock Text="&#xE1D9;" 
                                          FontFamily="Segoe MDL2 Assets" 
                                          Foreground="#cdd6f4"/>
                            </Grid>
                        </Button>
                        
                        <!-- Кнопка Закрыть -->
                        <Button x:Name="CloseButton" 
                                Style="{StaticResource CloseButtonStyle}"
                                Click="CloseButton_Click"
                                Margin="3,0,0,0"
                                ToolTip="Закрыть">
                            <Grid>
                                <Path Data="M0,0 L10,10" 
                                     Stroke="#cdd6f4" 
                                     StrokeThickness="1.6" 
                                     StrokeStartLineCap="Round" 
                                     StrokeEndLineCap="Round"/>
                                <Path Data="M0,10 L10,0" 
                                     Stroke="#cdd6f4" 
                                     StrokeThickness="1.6" 
                                     StrokeStartLineCap="Round" 
                                     StrokeEndLineCap="Round"/>
                            </Grid>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>
            
            <!-- Основное содержимое -->
            <Grid Grid.Row="1" Margin="20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Характеристики системы -->
                <ScrollViewer Grid.Column="0" 
                             VerticalScrollBarVisibility="Auto" 
                             HorizontalScrollBarVisibility="Disabled"
                             Margin="0,0,15,0">
                    <StackPanel>
                        <!-- Заголовок характеристик системы -->
                        <Border BorderThickness="0" Background="Transparent" Margin="0,0,0,15">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <TextBlock Text="Характеристики системы" 
                                         Grid.Column="0"
                                         FontSize="22"
                                         FontWeight="Bold"
                                         Foreground="#f9f9fa"
                                         VerticalAlignment="Center"
                                         Margin="0"/>
                                        
                                <StackPanel Grid.Column="1" Orientation="Horizontal">
                                    <TextBlock x:Name="LastUpdateText" 
                                             Text="Обновлено: 19:17:36" 
                                             FontSize="12" 
                                             Foreground="#a6adc8"
                                             VerticalAlignment="Center"
                                             Margin="0,0,5,0"/>
                                             
                                    <Button x:Name="RefreshButton"
                                           Style="{StaticResource RefreshButtonStyle}"
                                           Click="RefreshButton_Click"
                                           ToolTip="Обновить сейчас">
                                        <TextBlock Text="&#xE72C;" 
                                                 FontFamily="Segoe MDL2 Assets" 
                                                 Foreground="#89b4fa"/>
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </Border>
                        
                        <!-- Блок характеристик -->
                        <Border Style="{StaticResource SpecPanelStyle}" Background="#1e1e2e" BorderThickness="0">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <!-- Операционная система -->
                                <Grid Grid.Row="0" Grid.ColumnSpan="2" Margin="0,5,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="25"/>
                                        <ColumnDefinition Width="180"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <TextBlock Text="&#xE770;" 
                                             Grid.Column="0"
                                             FontFamily="Segoe MDL2 Assets"
                                             Foreground="#a6adc8"
                                             VerticalAlignment="Center"
                                             HorizontalAlignment="Center"/>
                                    <TextBlock Text="Операционная система" 
                                             Grid.Column="1"
                                             Style="{StaticResource SpecLabelStyle}"/>
                                    <TextBlock x:Name="OSVersionText" 
                                             Grid.Column="2"
                                             Text="Загрузка..." 
                                             Style="{StaticResource SpecValueStyle}"/>
                                </Grid>
                                
                                <!-- Процессор -->
                                <Grid Grid.Row="1" Grid.ColumnSpan="2" Margin="0,5,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="25"/>
                                        <ColumnDefinition Width="180"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <TextBlock Text="&#xE950;" 
                                             Grid.Column="0"
                                             FontFamily="Segoe MDL2 Assets"
                                             Foreground="#f38ba8"
                                             VerticalAlignment="Center"
                                             HorizontalAlignment="Center"/>
                                    <TextBlock Text="Модель процессора" 
                                             Grid.Column="1"
                                             Style="{StaticResource SpecLabelStyle}"/>
                                    <TextBlock x:Name="CPUModelText" 
                                             Grid.Column="2"
                                             Text="Загрузка..." 
                                             Style="{StaticResource SpecValueStyle}"/>
                                </Grid>
                                
                                <!-- Ядра/Потоки -->
                                <Grid Grid.Row="2" Grid.ColumnSpan="2" Margin="0,5,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="25"/>
                                        <ColumnDefinition Width="180"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <TextBlock Text="&#xF50C;" 
                                             Grid.Column="0"
                                             FontFamily="Segoe MDL2 Assets"
                                             Foreground="#f38ba8"
                                             VerticalAlignment="Center"
                                             HorizontalAlignment="Center"/>
                                    <TextBlock Text="Ядра / Потоки" 
                                             Grid.Column="1"
                                             Style="{StaticResource SpecLabelStyle}"/>
                                    <StackPanel Grid.Column="2" Orientation="Horizontal">
                                        <TextBlock x:Name="CPUCoresText" 
                                                 Text="Загрузка..." 
                                                 Style="{StaticResource SpecValueStyle}"/>
                                        <TextBlock Text=" / " Style="{StaticResource SpecValueStyle}"/>
                                        <TextBlock x:Name="CPUThreadsText" 
                                                 Text="Загрузка..." 
                                                 Style="{StaticResource SpecValueStyle}"/>
                                    </StackPanel>
                                </Grid>
                                
                                <!-- Оперативная память -->
                                <Grid Grid.Row="4" Grid.ColumnSpan="2" Margin="0,5,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="25"/>
                                        <ColumnDefinition Width="180"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <TextBlock Text="&#xE83F;" 
                                             Grid.Column="0"
                                             FontFamily="Segoe MDL2 Assets"
                                             Foreground="#74c7ec"
                                             VerticalAlignment="Center"
                                             HorizontalAlignment="Center"/>
                                    <TextBlock Text="Оперативная память" 
                                             Grid.Column="1"
                                             Style="{StaticResource SpecLabelStyle}"/>
                                    <TextBlock x:Name="RAMTotalText" 
                                             Grid.Column="2"
                                             Text="Загрузка..." 
                                             Style="{StaticResource SpecValueStyle}"/>
                                </Grid>
                                
                                <!-- Доступно ОЗУ -->
                                <Grid Grid.Row="5" Grid.ColumnSpan="2" Margin="0,5,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="25"/>
                                        <ColumnDefinition Width="180"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <TextBlock Text="&#xE916;" 
                                             Grid.Column="0"
                                             FontFamily="Segoe MDL2 Assets"
                                             Foreground="#74c7ec"
                                             VerticalAlignment="Center"
                                             HorizontalAlignment="Center"/>
                                    <TextBlock Text="Доступно ОЗУ" 
                                             Grid.Column="1"
                                             Style="{StaticResource SpecLabelStyle}"/>
                                    <TextBlock x:Name="RAMAvailableText" 
                                             Grid.Column="2"
                                             Text="Загрузка..." 
                                             Style="{StaticResource SpecValueStyle}"/>
                                </Grid>
                                
                                <!-- Видеокарта -->
                                <Grid Grid.Row="6" Grid.ColumnSpan="2" Margin="0,5,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="25"/>
                                        <ColumnDefinition Width="180"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <TextBlock Text="&#xE964;" 
                                             Grid.Column="0"
                                             FontFamily="Segoe MDL2 Assets"
                                             Foreground="#a6e3a1"
                                             VerticalAlignment="Center"
                                             HorizontalAlignment="Center"/>
                                    <TextBlock Text="Видеокарта" 
                                             Grid.Column="1"
                                             Style="{StaticResource SpecLabelStyle}"/>
                                    <TextBlock x:Name="GPUModelText" 
                                             Grid.Column="2"
                                             Text="Загрузка..." 
                                             Style="{StaticResource SpecValueStyle}"/>
                                </Grid>
                                
                                <!-- Видеопамять -->
                                <Grid Grid.Row="7" Grid.ColumnSpan="2" Margin="0,5,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="25"/>
                                        <ColumnDefinition Width="180"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <TextBlock Text="&#xE950;" 
                                             Grid.Column="0"
                                             FontFamily="Segoe MDL2 Assets"
                                             Foreground="#a6e3a1"
                                             VerticalAlignment="Center"
                                             HorizontalAlignment="Center"/>
                                    <TextBlock Text="Видеопамять" 
                                             Grid.Column="1"
                                             Style="{StaticResource SpecLabelStyle}"/>
                                    <TextBlock x:Name="GPUMemoryText" 
                                             Grid.Column="2"
                                             Text="Загрузка..." 
                                             Style="{StaticResource SpecValueStyle}"/>
                                </Grid>
                                
                                <!-- Разрешение экрана -->
                                <Grid Grid.Row="8" Grid.ColumnSpan="2" Margin="0,5,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="25"/>
                                        <ColumnDefinition Width="180"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <TextBlock Text="&#xE7F4;" 
                                             Grid.Column="0"
                                             FontFamily="Segoe MDL2 Assets"
                                             Foreground="#a6e3a1"
                                             VerticalAlignment="Center"
                                             HorizontalAlignment="Center"/>
                                    <TextBlock Text="Разрешение экрана" 
                                             Grid.Column="1"
                                             Style="{StaticResource SpecLabelStyle}"/>
                                    <TextBlock x:Name="ScreenResolutionText" 
                                             Grid.Column="2"
                                             Text="Загрузка..." 
                                             Style="{StaticResource SpecValueStyle}"/>
                                </Grid>
                                
                                <!-- Частота обновления -->
                                <Grid Grid.Row="9" Grid.ColumnSpan="2" Margin="0,5,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="25"/>
                                        <ColumnDefinition Width="180"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <TextBlock Text="&#xE823;" 
                                             Grid.Column="0"
                                             FontFamily="Segoe MDL2 Assets"
                                             Foreground="#a6e3a1"
                                             VerticalAlignment="Center"
                                             HorizontalAlignment="Center"/>
                                    <TextBlock Text="Частота обновления" 
                                             Grid.Column="1"
                                             Style="{StaticResource SpecLabelStyle}"/>
                                    <TextBlock x:Name="RefreshRateText" 
                                             Grid.Column="2"
                                             Text="Загрузка..." 
                                             Style="{StaticResource SpecValueStyle}"/>
                                </Grid>
                            </Grid>
                        </Border>
                        
                        <!-- Сетевые адаптеры -->
                        <Border Style="{StaticResource SpecPanelStyle}" Margin="0,15,0,0" Background="#1e1e2e" BorderThickness="0">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                
                                <TextBlock Text="Сетевые адаптеры" 
                                         Grid.Row="0"
                                         Margin="0,0,0,10"
                                         FontSize="18"
                                         FontWeight="SemiBold"
                                         Foreground="#f9f9fa"/>
                                
                                <ItemsControl x:Name="NetworkAdaptersItemsControl" Grid.Row="1">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Grid Margin="0,6">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="25"/>
                                                    <ColumnDefinition Width="155"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                
                                                <TextBlock Text="&#xE839;" 
                                                         Grid.Column="0"
                                                         FontFamily="Segoe MDL2 Assets"
                                                         Foreground="#bac2de"
                                                         VerticalAlignment="Center"
                                                         HorizontalAlignment="Center"/>
                                                
                                                <TextBlock Text="{Binding Name}" 
                                                          Grid.Column="1" 
                                                          Style="{StaticResource SpecLabelStyle}"/>
                                                <TextBlock Text="{Binding Value}" 
                                                          Grid.Column="2" 
                                                          Style="{StaticResource SpecValueStyle}"/>
                                            </Grid>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                                
                                <TextBlock x:Name="NetworkAdaptersLoadingText" 
                                         Grid.Row="1"
                                         Text="Загрузка данных о сетевых адаптерах..." 
                                         Style="{StaticResource SpecValueStyle}" 
                                         Margin="0,5,0,0"/>
                            </Grid>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
                
                <!-- Панель с кнопками оптимизации -->
                <Border Grid.Column="1" 
                       Width="450" 
                       Margin="0,0,0,0" 
                       Background="#1e1e2e" 
                       BorderBrush="#313244" 
                       BorderThickness="0" 
                       CornerRadius="16" 
                       VerticalAlignment="Top"
                       Effect="{Binding Source={StaticResource SpecPanelStyle}, Path=Effect}">
                    <StackPanel Margin="25">
                        <TextBlock Text="Выберите режим оптимизации" 
                                  Margin="0,0,0,25"
                                  TextAlignment="Center"
                                  FontSize="22"
                                  FontWeight="Bold"
                                  Foreground="#f9f9fa"/>
                        
                        <Button x:Name="AutoOptimizationButton" 
                                Style="{StaticResource AutoOptimizationButtonStyle}" 
                                Click="AutoOptimizationButton_Click"
                                Margin="0,0,0,20"
                                Height="90">
                            <Grid Width="360">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <Border Grid.Row="0" Grid.Column="0" Grid.RowSpan="2"
                                       Background="#9C27B080" 
                                       Width="50" Height="50" 
                                       CornerRadius="16" 
                                       Margin="0,0,15,0" 
                                       VerticalAlignment="Center"
                                       Effect="{Binding Source={StaticResource SpecPanelStyle}, Path=Effect}">
                                    <TextBlock Text="&#xE74C;" 
                                             FontFamily="Segoe MDL2 Assets" 
                                             FontSize="22" 
                                             Foreground="White" 
                                             HorizontalAlignment="Center" 
                                             VerticalAlignment="Center"/>
                                </Border>
                                
                                <TextBlock Grid.Row="0" Grid.Column="1" 
                                         Text="Автоматическая оптимизация" 
                                         Foreground="White" 
                                         FontSize="20" 
                                         FontWeight="SemiBold" 
                                         VerticalAlignment="Bottom"/>
                                         
                                <TextBlock Grid.Row="1" Grid.Column="1" 
                                         Text="Применение всех доступных оптимизаций" 
                                         Foreground="White" 
                                         FontSize="13" 
                                         Opacity="0.85" 
                                         Margin="0,5,0,0" 
                                         VerticalAlignment="Top"/>
                            </Grid>
                        </Button>
                        
                        <Button x:Name="ManualOptimizationButton" 
                                Style="{StaticResource ManualOptimizationButtonStyle}" 
                                Click="ManualOptimizationButton_Click"
                                Margin="0,0,0,30"
                                Height="90">
                            <Grid Width="360">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <Border Grid.Row="0" Grid.Column="0" Grid.RowSpan="2"
                                       Background="#1A76D280" 
                                       Width="50" Height="50" 
                                       CornerRadius="16" 
                                       Margin="0,0,15,0" 
                                       VerticalAlignment="Center"
                                       Effect="{Binding Source={StaticResource SpecPanelStyle}, Path=Effect}">
                                    <TextBlock Text="&#xE90F;" 
                                             FontFamily="Segoe MDL2 Assets" 
                                             FontSize="22" 
                                             Foreground="White" 
                                             HorizontalAlignment="Center" 
                                             VerticalAlignment="Center"/>
                                </Border>
                                
                                <TextBlock Grid.Row="0" Grid.Column="1" 
                                         Text="Мануальная оптимизация" 
                                         Foreground="White" 
                                         FontSize="20" 
                                         FontWeight="SemiBold" 
                                         VerticalAlignment="Bottom"/>
                                         
                                <TextBlock Grid.Row="1" Grid.Column="1" 
                                         Text="Выбор отдельных оптимизаций" 
                                         Foreground="White" 
                                         FontSize="13" 
                                         Opacity="0.85" 
                                         Margin="0,5,0,0" 
                                         VerticalAlignment="Top"/>
                            </Grid>
                        </Button>
                        
                        <!-- Индикатор состояния последней оптимизации -->
                        <Border Margin="0,10,0,0" 
                               Background="#11111b" 
                               CornerRadius="20" 
                               Padding="20"
                               BorderBrush="#313244"
                               BorderThickness="1"
                               Effect="{Binding Source={StaticResource SpecPanelStyle}, Path=Effect}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <Border Grid.Column="0" 
                                       Background="#45475a" 
                                       Width="42" Height="42" 
                                       CornerRadius="21" 
                                       Margin="0,0,15,0"
                                       Effect="{Binding Source={StaticResource SpecPanelStyle}, Path=Effect}">
                                    <TextBlock x:Name="StatusIcon" 
                                             Text="&#xE946;" 
                                             FontFamily="Segoe MDL2 Assets" 
                                             FontSize="18" 
                                             Foreground="#cdd6f4" 
                                             HorizontalAlignment="Center" 
                                             VerticalAlignment="Center"/>
                                </Border>
                                
                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="Статус оптимизации" 
                                             FontSize="16" 
                                             FontWeight="SemiBold" 
                                             Foreground="#f9f9fa" 
                                             Margin="0,0,0,8"/>
                                    <TextBlock x:Name="OptimizationStatusText" 
                                             Text="Оптимизация не выполнялась" 
                                             FontSize="14" 
                                             Foreground="#bac2de" 
                                             TextWrapping="Wrap"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </StackPanel>
                </Border>
                
                <!-- Индикатор загрузки -->
                <Border x:Name="LoadingPanel" 
                       Grid.ColumnSpan="2" 
                       Background="#11111be6"
                       Visibility="Collapsed">
                    <Grid>
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                            <Border Background="#1e1e2e" 
                                   CornerRadius="12" 
                                   Padding="30,25" 
                                   Margin="0">
                                <Border.Effect>
                                    <DropShadowEffect BlurRadius="20" 
                                                     ShadowDepth="0" 
                                                     Opacity="0.5" 
                                                     Color="#000000"/>
                                </Border.Effect>
                                <StackPanel>
                                    <Ellipse Width="50" 
                                           Height="50" 
                                           Margin="0,0,0,20" 
                                           StrokeThickness="4">
                                        <Ellipse.Stroke>
                                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                <GradientStop Color="#8E44AD" Offset="0"/>
                                                <GradientStop Color="#3498DB" Offset="1"/>
                                            </LinearGradientBrush>
                                        </Ellipse.Stroke>
                                        <Ellipse.RenderTransform>
                                            <RotateTransform x:Name="LoadingRotation" CenterX="25" CenterY="25"/>
                                        </Ellipse.RenderTransform>
                                    </Ellipse>
                                    <TextBlock x:Name="LoadingText"
                                             Text="Загрузка..." 
                                             FontSize="18" 
                                             Foreground="White" 
                                             FontWeight="Medium"
                                             HorizontalAlignment="Center"
                                             Margin="0,0,0,8"/>
                                    <StackPanel Orientation="Horizontal" 
                                               HorizontalAlignment="Center">
                                        <Ellipse x:Name="Dot1" 
                                                Width="8" 
                                                Height="8" 
                                                Fill="#f8f8f2" 
                                                Margin="4,0"/>
                                        <Ellipse x:Name="Dot2" 
                                                Width="8" 
                                                Height="8" 
                                                Fill="#f8f8f2" 
                                                Margin="4,0"/>
                                        <Ellipse x:Name="Dot3" 
                                                Width="8" 
                                                Height="8" 
                                                Fill="#f8f8f2" 
                                                Margin="4,0"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Border>
</Window> 